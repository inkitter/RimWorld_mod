<Defs>
  <ThingDef ParentName="MakeableDrugBase">
    <defName>GodPill</defName>
    <label>God's Pill</label>
    <description>God's Pill</description>
    <graphicData>
      <texPath>Things/Item/Drug/Luciferium</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>300</WorkToMake>
      <MarketValue>1</MarketValue>
      <Mass>0.01</Mass>
    </statBases>

    <ingestible>
      <foodType>Plant, Processed</foodType>
      <joyKind>Chemical</joyKind>
      <joy>1</joy>
      <nurseable>true</nurseable>
      <drugCategory>Social</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>GodPillHigh</hediffDef>
          <severity>1</severity>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>1.0</offset>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Alcohol</chemical>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>20</listOrder>
      </li>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use resurrector mech serum</useLabel>
        <useDuration>0</useDuration>
      </li>
      <!-- <li Class="CompProperties_Targetable">
        <compClass>CompTargetable_SingleCorpse</compClass>
      </li> -->
      <li Class="CompProperties_Targetable">
        <compClass>CompTargetable_SinglePawn</compClass>
      </li>
      <li>
        <compClass>CompTargetEffect_Resurrect</compClass>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>CompUseEffect_FixWorstHealthCondition</compClass>
      </li>
      
      
    </comps>

    <recipeMaker>
			<recipeUsers>
        <li>CraftingSpot</li>
        <li>DrugLab</li>
      </recipeUsers>
      <workSpeedStat>DrugCookingSpeed</workSpeedStat>
      <workSkill>Cooking</workSkill>
    </recipeMaker>
    <!-- <costList>
      
    </costList> -->
  </ThingDef>

  <HediffDef>
    <defName>GodPillHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>GodPillHigh</label>
    <defaultLabelColor>(0.1,0.7,0.2)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_HealPermanentWounds" />
    </comps>
    <stages>
      <li>
        <hungerRateFactorOffset>-0.95</hungerRateFactorOffset>
        <restFallFactor>0.3</restFallFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.1</offset>
            <setMax>5</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.3</offset>
          </li>
            <li>
            <capacity>Metabolism</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>1.2</postFactor>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
          <ArmorRating_Blunt>0.95</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.95</ArmorRating_Sharp>
          <ArmorRating_Heat>0.95</ArmorRating_Heat>
          <Flammability>-1</Flammability>
          <JoyGainFactor>100</JoyGainFactor>
          <MentalBreakThreshold>-0.5</MentalBreakThreshold>
          <RestRateMultiplier>1</RestRateMultiplier>
          <MoveSpeed>15</MoveSpeed>
          <PsychicSensitivity>-1</PsychicSensitivity>
          <ToxicSensitivity>-1</ToxicSensitivity>
          <ComfyTemperatureMin>-50</ComfyTemperatureMin>
          <ComfyTemperatureMax>50</ComfyTemperatureMax>
        </statOffsets>
        <makeImmuneTo>
          <li>Malaria</li>
          <li>SleepingSickness</li>
          <li>Plague</li>
          <li>GutWorms</li>
          <li>MuscleParasites</li>
          <li>FoodPoisoning</li>
          <li>WoundInfection</li>
          <li>Animal_Plague</li>
          <li>ResurrectionSickness</li>
          <li>Alzheimers</li>
        </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>GodPillHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>GodPillHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on GodsPill</label>
        <description>I'm Goddddd.</description>
        <baseMoodEffect>70</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>