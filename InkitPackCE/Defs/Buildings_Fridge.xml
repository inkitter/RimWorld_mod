<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="FridgeBase" Abstract="True">
		<designationCategory>Furniture</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingClass>RimFridge.Building_Refrigerator</thingClass>
		<altitudeLayer>Building</altitudeLayer>	
		<tradeTags>
			<li>Furniture</li>
		</tradeTags>
		<category>Building</category>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>

		<statBases>
			<Mass>30</Mass>
			<MaxHitPoints>1000</MaxHitPoints>
			<WorkToBuild>1050</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<destroyable>true</destroyable>
		<useHitPoints>false</useHitPoints>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.4</fillPercent>
		
		<castEdgeShadows>true</castEdgeShadows>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>75</basePowerConsumption>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>4</glowRadius>
				<glowColor>(89,188,255,0)</glowColor>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<description>Rottable things stored in this will not spoil</description>
		<tickerType>Rare</tickerType>
		<pathCost>30</pathCost>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>

		<building>
			<preventDeteriorationInside>true</preventDeteriorationInside>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>AnimalProductRaw</li>
						<li>Corpses</li>
						<li>Drugs</li>
						<li>EggsFertilized</li>
						<li>EggsUnfertilized</li>
						<li>Foods</li>
						<li>Medicine</li>
						<li>PlantMatter</li>
						<li>PlantFoodRaw</li>
					</categories>
					<specialFiltersToDisallow>
						<li>AllowRotten</li>
					</specialFiltersToDisallow>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>FoodMeals</li>
					</categories>
					<disallowedThingDefs>
						<li>MealSurvivalPack</li>
					</disallowedThingDefs>
				</filter>
			</defaultStorageSettings>
		</building>
	</ThingDef>

	<ThingDef ParentName="FridgeBase">
		<defName>RimFridge_Refrigerator</defName>
		<label>冰箱</label>	
		<graphicData>
			<texPath>Building/Temperature/Fridge/DualFridge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,3)</drawSize>
		</graphicData>
		<costList>
			<Steel>40</Steel>
		</costList>
		<size>(2,1)</size>
		<comps>
			<li Class="RimFridge.CompProperties_SecondLayer">
				<graphicData>
					<texPath>Building/Temperature/Fridge/DualFridgeLid</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>Transparent</shaderType>
					<drawSize>(4,3)</drawSize>
				</graphicData>
				<altitudeLayer>MoteOverhead</altitudeLayer>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
	</ThingDef>

	<ThingDef ParentName="FridgeBase">
		<defName>RimFridge_SingleRefrigerator</defName>
		<label>小冰箱</label>
		<graphicData>
			<texPath>Building/Temperature/Fridge/SingleFridge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		<costList>
			<Steel>20</Steel>
		</costList>
		<size>(1,1)</size>
		<comps>
			<li Class="RimFridge.CompProperties_SecondLayer">
				<graphicData>
					<texPath>Building/Temperature/Fridge/SingleFridgeLid</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>Transparent</shaderType>
					<drawSize>(3,3)</drawSize>
				</graphicData>
				<altitudeLayer>MoteOverhead</altitudeLayer>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
	</ThingDef>


	<ThingDef ParentName="FridgeBase">
		<defName>RimFridge_QuadRefrigerator</defName>
		<label>大冰箱</label>
		<graphicData>
			<texPath>Building/Temperature/Fridge/QuadFridge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4, 4)</drawSize>
		</graphicData>
		<costList>
			<Steel>60</Steel>
		</costList>
		<size>(2,2)</size>
		<comps>
			<li Class="RimFridge.CompProperties_SecondLayer">
				<graphicData>
					<texPath>Building/Temperature/Fridge/QuadFridgeLid</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<shaderType>Transparent</shaderType>
					<drawSize>(4,4)</drawSize>
				</graphicData>
				<altitudeLayer>MoteOverhead</altitudeLayer>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
	</ThingDef>

	<ThoughtDef>
		<defName>FrostyBeer</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>2</stackLimit>
		<stages>
			<li>
				<label>enjoyed a cold one</label>
				<description>Nothing better then a frosty beverage!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
