    <stages>
      <li>
        <hungerRateFactorOffset>-0.9</hungerRateFactorOffset>
        <restFallFactor>0.2</restFallFactor>
        <socialFightChanceFactor>-1</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.3</postFactor>
            <offset>0.1</offset>
            <setMax>5</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>1.3</postFactor>
            <offset>0.2</offset>
