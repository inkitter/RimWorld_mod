<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>A Dog Said... Animal Prosthetics</modName>
			</li>

			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/RecipeDef[defName="InstallSimpleProstheticTailAnimal" or defName="InstallPegLegAnimal" or defName="InstallSimpleProstheticLegAnimal" or defName="InstallSimpleProstheticArmAnimal" or defName="InstallNoseAnimalSimple" or defName="InstallBionicEyeAnimal" or defName="InstallEarAnimalSimple" or defName="InstallJawAnimalSimple" or defName="InstallSpineAnimalSimple" or defName="InstallAnimalBrainStimulator" or defName="InstallBionicAnimalHeart" or defName="InstallBionicAnimalLung" or defName="InstallBionicAnimalLiver" or defName="InstallBionicAnimalKidney" or defName="InstallBionicAnimalStomach" or @Name="OldWoundsAnimal"]/recipeUsers</xpath>
				<value>
					<li>HousekeeperCat</li>
				</value>
			</li>

		</operations>
	</Operation>

	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
    	<defName>Gun_ChargeRifleGod</defName>
		<statBases>
			<MarketValue>500</MarketValue>
			<Mass>3.0</Mass>
			<RangedWeapon_Cooldown>0.32</RangedWeapon_Cooldown>
			<SightsEfficiency>1.30</SightsEfficiency>
			<ShotSpread>0.05</ShotSpread>
			<SwayFactor>1.30</SwayFactor>
			<Bulk>4.00</Bulk>
			<WorkToMake>48000</WorkToMake>
		</statBases>
		<Properties>
			<recoilAmount>1.50</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_Bullet7</defaultProjectile>
			<warmupTime>0.8</warmupTime>
			<range>70</range>
			<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
			<burstShotCount>15</burstShotCount>
			<soundCast>Shot_ChargeRifle</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</Properties>
		<AmmoUser>
			<magazineSize>30</magazineSize>
			<reloadTime>3</reloadTime>
			<ammoSet>AmmoSet_God</ammoSet>
		</AmmoUser>
		<FireModes>
			<aimedBurstShotCount>3</aimedBurstShotCount>
			<aiUseBurstMode>TRUE</aiUseBurstMode>
			<aiAimMode>AimedShot</aiAimMode>
		</FireModes>
		<weaponTags>
			<li>CE_AI_Rifle</li>
		</weaponTags>
  	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Gun_ChargeRifleGod"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
					<li>Cut</li>
					<li>Stab</li>
				</capacities>
				<power>17</power>
				<cooldownTime>1.2</cooldownTime>
				<armorPenetrationBlunt>0.7</armorPenetrationBlunt>
				<armorPenetrationSharp>0.7</armorPenetrationSharp>
				<surpriseAttack>
				  <extraMeleeDamages>
					<li>
					  <def>Stun</def>
					  <amount>20</amount>
					</li>
				  </extraMeleeDamages>
				</surpriseAttack>
				</li>
			</tools>
		</value>
	</Operation>

</Patch>